with open('words.txt', 'r', encoding='utf-8') as f:
    words = [line.strip() for line in f if line.strip()]
sorted_az = sorted(words)
sorted_length = sorted(words, key=len)
sorted_za = sorted(words, reverse=True)
with open('sorted_alphabetically.txt', 'w', encoding='utf-8') as f:
    for word in sorted_az:
        f.write(word + '\n')
with open('sorted_by_length.txt', 'w', encoding='utf-8') as f:
    for word in sorted_length:
        f.write(word + '\n')
with open('sorted_reverse.txt', 'w', encoding='utf-8') as f:
    for word in sorted_za:
        f.write(word + '\n')
